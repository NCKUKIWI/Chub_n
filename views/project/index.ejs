<div id="backend_project" style="width:100%;" v-show="show.total">
    <!-- project list -->
    <div class="function_main" v-show="show.list">
        <div class="function_header">
            <h1>專案列表</h1>
            <i class="big plus icon" name="project" @click="showForm"></i>
        </div>
        <div class=function_content>
            <table class="ui selectable celled table">
                <thead>
                    <tr>
                        <th>Project Name</th>
                        <th>Duration</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="(project, index) in projects" @click="showProject(index)">
                        <td>{{ project.name }}</td>
                        <td>{{ project.duration }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- project -->
    <div class="function_main" v-show="show.form">
        <div class="function_header">
            <h1>專案內容</h1>
            <button v-if='project.id == ""' class="ui button" style="margin-left: 25px;" @click="createProject">
                Create
            </button>
            <template v-else>
                <button class="ui button" style="margin-left: 20px;" @click="updateProject(project.id)">
                    Save
                </button>
                <button class="ui button" style="margin-left: 20px;" @click="deleteProject(project.id)">
                    Delete
                </button>
            </template>
            <button class="ui button" style="margin-left: 20px;" @click="showList">
                Back
            </button>
        </div>
        <div class=function_content>
            <div class="ui top attached tabular menu">
                <a class="item active" data-tab="project_Info">Info</a>
                <a class="item" data-tab="project_Banner">Banner</a>
                <a class="item" data-tab="project_Video">Video</a>
                <a class="item" data-tab="project_Image">Image</a>
                <!-- <a class="item active" data-tab="project_Gallery">Gallery</a> -->
            </div>
            <div class="ui bottom attached tab segment active" data-tab="project_Info">
                <div class="ui form">
                    <div class="inline fields">
                        <div class="eight wide field">
                            <label>Name:</label>
                            <input type="text" placeholder="" v-model.lazy="project.name">
                        </div>
                    </div>
                    <div class="inline fields">
                        <div class="eight wide field">
                            <label>Subtitle:</label>
                            <input type="text" placeholder="" v-model.lazy="project.subtitle">
                        </div>
                    </div>
                    <div class="inline fields">
                        <div class="eight wide field">
                            <label>Duration:</label>
                            <input type="text" placeholder="" v-model.lazy="project.duration">
                        </div>
                    </div>
                    <div class="field">
                        <label>Mission:</label>
                        <textarea rows="2" v-model.lazy="project.mission"></textarea>
                    </div>
                    <div class="field">
                        <label>Introduction:</label>
                        <textarea v-model.lazy="project.introduction"></textarea>
                    </div>
                </div>
            </div>
            <div class="ui bottom attached tab segment" data-tab="project_Banner">
                <form class="ui form" id="projectBannerForm">
                    <div class="field">
                        <label>Banner</label>
                        <input type="file" name="banner" id="banner">
                    </div>
                </form>
                <br>
                <img width="100%" v-if="project.banner" v-bind:src="'/uploads/project/' + project.id + '/banner.png?' + new Date().getTime()">
            </div>
            <div class="ui bottom attached tab segment" data-tab="project_Video" style="height: 100vh">
                <div class="ui form">
                    <div class="inline field">
                        <label>Video url:</label>
                        <input type="text" v-model.lazy="project.url">
                        <button class="ui button" style="margin-left: 10px" @click="parseURL"> 解析 </button>
                    </div>
                </div>
                <br><br>
                <iframe style="position:absolute;top:0;left:0;width:80%;height:80%; margin: 10%" v-bind:src="project.url">
                </iframe>
            </div>
            <div class="ui bottom attached tab segment" data-tab="project_Image">
                <div class="ui three column grid">
                    <div class="column">
                        <form class="ui form" id="projectImageForm">
                            <div class="field">
                                <label>Image</label>
                                <input type="file" name="image" id="image">
                            </div>
                        </form>
                    </div>
                    <div class="column">
                        <div class="ui fluid card">
                            <div class="image">
                                <img src="public/img/ex_handsome_boy.png">
                            </div>
                            <div class="content">
                                <a class="header">Daniel Louise</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui bottom attached tab segment" data-tab="project_Gallery">
                test
            </div>
        </div>
    </div>
</div>